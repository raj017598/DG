<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ContactUsActivity"
    android:background="@color/colorBlack">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/twentry_dp"
        android:fontFamily="@font/arvo_bold"
        android:text="ABOUT"
        android:textColor="@color/colorGreen"
        android:textSize="@dimen/eighty_sp"
        android:textStyle="bold"
        android:id="@+id/about"/>

    <TextView
        android:id="@+id/us"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/about"
        android:layout_marginLeft="@dimen/twentry_dp"
        android:fontFamily="@font/arvo_bold"
        android:text="Us"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/eighty_sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/address_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/us"
        android:layout_marginLeft="?attr/actionBarSize"
        android:layout_marginTop="@dimen/twentry_dp"
        android:fontFamily="@font/arvo_bold"
        android:text="ADDRESS"
        android:textColor="@color/colorGreen"
        android:textSize="@dimen/twenty_five_sp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/address_textview"
        android:textSize="@dimen/twenty_sp"
        android:text="089, Old P.H.C., Kasida, Bikrampur\n Ghatshila, Jamshedpur - 832303"
        android:textColor="@color/colorSmalllWhite"
        android:layout_marginLeft="?attr/actionBarSize"
        android:layout_marginTop="@dimen/two_dp"
        android:id="@+id/full_adddress_textview"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="E-MAIL"
        android:textColor="@color/colorGreen"
        android:layout_below="@id/full_adddress_textview"
        android:layout_marginLeft="?attr/actionBarSize"
        android:textSize="@dimen/twenty_five_sp"
        android:layout_marginTop="@dimen/twentry_dp"
        android:id="@+id/email_text"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/email_text"
        android:textSize="@dimen/twenty_sp"
        android:text="elearningdigi@gmail.com"
        android:textColor="@color/colorSmalllWhite"
        android:layout_marginLeft="?attr/actionBarSize"
        android:layout_marginTop="@dimen/two_dp"
        android:id="@+id/email_value_textview"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Phone"
        android:textColor="@color/colorGreen"
        android:layout_below="@id/email_value_textview"
        android:layout_marginLeft="?attr/actionBarSize"
        android:textSize="@dimen/twenty_five_sp"
        android:layout_marginTop="@dimen/twentry_dp"
        android:id="@+id/phone_text"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/phone_text"
        android:id="@+id/phone_value_textview"
        android:textSize="@dimen/twenty_sp"
        android:text="+91 62053 49108"
        android:textColor="@color/colorSmalllWhite"
        android:layout_marginLeft="?attr/actionBarSize"
        android:layout_marginTop="@dimen/two_dp"
        />
    <Button
        android:layout_width="?attr/actionBarSize"
        android:layout_height="?attr/actionBarSize"
        android:background="@drawable/calling_design"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="?attr/actionBarSize"
        android:layout_marginRight="@dimen/twentry_dp"
        android:drawableBottom="@drawable/ic_baseline_phone_in_talk_24"
        android:gravity="center"
        android:layout_toLeftOf="@id/view"
        android:id="@+id/call_button"
        android:padding="@dimen/five_dp" />
    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/view"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="?attr/actionBarSize"
        android:layout_centerHorizontal="true"
        />
    <Button
        android:layout_width="?attr/actionBarSize"
        android:layout_height="?attr/actionBarSize"
        android:background="@drawable/calling_design"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@id/view"
        android:layout_marginLeft="@dimen/twentry_dp"
        android:layout_marginBottom="?attr/actionBarSize"
        android:drawableBottom="@drawable/ic_round_email_24"
        android:gravity="center"
        android:id="@+id/gmail_message"
        android:padding="@dimen/five_dp"/>

</RelativeLayout>